<% layout('layouts/boilerplate') %>
<h1>Campgrounds</h1>

<Ul>
  <% for( let i = 0; i < allCamps.length; i++ ) { %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img
          src="<%= allCamps[i].image %>"
          class="img-fluid"
          alt="campground image"
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= allCamps[i].title %></h5>
          <p class="card-text"><%= allCamps[i].description %></p>
          <p class="card-text">
            <small class="text-muted"><%= allCamps[i].location %></small>
            <a
              href="/campgrounds/<%= allCamps[i]._id %>"
              class="btn btn-primary"
              >View</a
            >
          </p>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</Ul>
